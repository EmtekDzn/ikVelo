{% extends 'BackOfficeBundle:Default:backtemplate.html.twig' %}

{% block body %}
    <h1>Détails du service</h1>

    <table>
        <tbody>
            <tr>
                <th>Service</th>
                <td>{{ service.service }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('service_edit', { 'id': service.id }) }}">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('service_index') }}">Retour à la liste</a>
        </li>
    </ul>
{% endblock %}
